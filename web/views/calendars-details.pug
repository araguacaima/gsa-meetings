extends layout

block title
  title= title
block scripts
  script(type='text/javascript', src='/javascripts/jquery-3.2.1.js')
  link(rel='stylesheet', href='/bower_components/bootstrap/dist/css/bootstrap.min.css')
block content
  h1 Manage your events.
  br
  .container
    section.css-table
      section.two-column(style="display: inline-block")
        section.cell
          each val in calendarEvents
            section.css-table
              section.two-column(style="display: inline-block")
                section.cell
                  .text
                    input(type='checkbox', name='calendarEvents', id= val.id value=val.description)
                section.cell(style="color: #555555")
                  .text
                    h3(style="margin-bottom: 0; margin-top: 0; margin-left: 10px")= val
  .text-center(style="margin: 30px;")
    a.btn.btn-danger(href='/jira/ticket')
      span.fa.fa-calendar
      |&nbsp;Push to Jira